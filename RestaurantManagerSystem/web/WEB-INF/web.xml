<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadChefScreen</servlet-name>
        <servlet-class>controller.loadChefScreen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderDetailController</servlet-name>
        <servlet-class>controller.OrderDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOrderController</servlet-name>
        <servlet-class>controller.AddOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadChefScreen</servlet-name>
        <url-pattern>/chef</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TableController</servlet-name>
        <servlet-class>controller.TableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TableController</servlet-name>
        <url-pattern>/TableController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>controller.OrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/OrderController</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>OrderDetailController</servlet-name>
        <servlet-class>controller.OrderDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderDetailController</servlet-name>
        <url-pattern>/OrderDetailController</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddOrderController</servlet-name>
        <servlet-class>controller.AddOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddOrderController</servlet-name>
        <url-pattern>/add-order</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ResetTableController</servlet-name>
        <servlet-class>controller.ResetTableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetTableController</servlet-name>
        <url-pattern>/reset</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ConfirmController</servlet-name>
        <servlet-class>controller.ConfirmController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmController</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>pixel-html/auth-login.html</welcome-file>
    </welcome-file-list>
</web-app>
